{
  "name": "quantumscribe",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.1",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "pnpm --parallel run dev",
    "start": "pnpm --parallel run start",
    "lint": "pnpm --recursive run lint",
    "format": "pnpm --recursive run format",
    "build": "supabase db push && pnpm --parallel run build",
    "prisma:generate": "pnpx prisma generate --schema=backend/prisma/schema.prisma"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.35.0"
  }
}