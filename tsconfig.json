{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "baseUrl": ".",
    "paths": {
      "@backend/*": [
        "backend/src/*"
      ],
      "@frontend/*": [
        "frontend/src/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  }
}
