datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects Project[]
  epics    Epic[]

  @@map("users")
  @@schema("auth")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  ownerId     String
  userId      String
  owner       User     @relation(fields: [ownerId], references: [id])
  epics       Epic[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
  @@schema("public")
}

model Epic {
  id        String     @id @default(uuid())
  title     String
  status    EpicStatus @default(PLANNED)
  order     Int        @default(0)
  projectId String
  userId    String
  project   Project    @relation(fields: [projectId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  stories   Story[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("epics")
  @@schema("public")
}

enum EpicStatus {
  PLANNED
  ACTIVE
  DONE

  @@schema("public")
}

model Story {
  id          String   @id @default(uuid())
  title       String
  description String?
  position    Int
  epicId      String
  epic        Epic     @relation(fields: [epicId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("stories")
  @@schema("public")
}
